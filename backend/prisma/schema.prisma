datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  MEMBER
  MENTOR
  ADMIN
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String
  name           String?
  role           Role     @default(MEMBER)
  disabled       Boolean  @default(false)
  invites        Invite[] @relation("CreatedInvites")
  consumedInvite Invite?  @relation("ConsumedInvite")
  approvedInvites InviteRequest[] @relation("InviteApprover")
  registryItems  RegistryItem[]
  registryConflicts RegistryConflict[]
  mentorNotesAuthored MentorNote[] @relation("MentorNotesAuthored")
  mentorNotesReceived MentorNote[] @relation("MemberMentorNotes")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  myRegistryAccessToken  String?
  myRegistryRefreshToken String?
  myRegistryTokenExpires DateTime?
  myRegistryLastSyncedAt DateTime?
  myRegistryUserId        String?
  myRegistryEmail         String?

  pinterestAccessToken    String?
  pinterestRefreshToken   String?
  pinterestTokenExpires   DateTime?

  mentorFeedbackAuthored MentorFeedback[] @relation("MentorFeedbackMentor")
  mentorFeedbackReceived MentorFeedback[] @relation("MentorFeedbackMember")
  mentorTasksMentor MentorTask[] @relation("MentorTasksMentor")
  mentorTasksMember MentorTask[] @relation("MentorTasksMember")
  workbookEntries WorkbookEntry[]
  hostedEvents     Event[] @relation("HostedEvents")
  profile          Profile?
  loginEvents      LoginEvent[]
}

model LoginEvent {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  email     String
  role      Role?
  success   Boolean
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  inviteRequestId String?  @unique

  firstName       String?
  lastName        String?
  dueDate         DateTime?
  city            String?
  state           String?

  user           User           @relation(fields: [userId], references: [id])
  inviteRequest  InviteRequest? @relation(fields: [inviteRequestId], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
model Invite {
  id          String   @id @default(cuid())
  code        String   @unique
  email       String?
  role        Role     @default(MEMBER)
  createdBy   User     @relation("CreatedInvites", fields: [createdById], references: [id])
  createdById String
  createdByEmail String?
  used        Boolean  @default(false)
  usedAt      DateTime?
  usedBy      User?    @relation("ConsumedInvite", fields: [usedById], references: [id])
  usedById    String?  @unique
  expiresAt   DateTime?
  maxUses     Int      @default(1)
  createdAt   DateTime @default(now())
}

model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model InviteRequest {
  id            String   @id @default(cuid())
  email         String   @unique
  firstName     String?
  lastName      String?
  message       String?
  status        String   @default("pending")
  inviteCode    String?  @unique

  approvedById  String?
  approvedBy    User?    @relation("InviteApprover", fields: [approvedById], references: [id])

  profile       Profile?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum RegistryStatus {
  ACTIVE
  NEEDED
  RESERVED
  PURCHASED
  PURCHASED_ELSEWHERE
  REMOVED_REMOTE
}

enum WorkbookEntryType {
  JOURNAL
  MOODBOARD
  CHECKLIST
  REFLECTION
}

model Product {
  id           String         @id @default(cuid())
  name         String
  brand        String
  category     String
  imageUrl     String
  affiliateUrl String
  merchant     String
  moduleCodes  String[]
  price        Float?
  inStock      Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  registryItems RegistryItem[]
  mentorNotes  MentorNote[]
}

model RegistryItem {
  id             String         @id @default(cuid())
  userId         String
  productId      String?
  isCustom       Boolean        @default(false)
  title          String
  url            String
  merchant       String?
  category       String?
  moduleCode     String?
  image          String?
  price          Float?
  myRegistryId   String?
  notes          String?
  quantity       Int            @default(1)
  status         RegistryStatus @default(ACTIVE)
  purchaseSource String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user      User               @relation(fields: [userId], references: [id])
  product   Product?           @relation(fields: [productId], references: [id])
  conflicts RegistryConflict[]
  mentorFeedback MentorFeedback[]
}

model MentorNote {
  id        String   @id @default(cuid())
  memberId  String
  mentorId  String
  productId String
  note      String
  createdAt DateTime @default(now())

  member User    @relation("MemberMentorNotes", fields: [memberId], references: [id])
  mentor User    @relation("MentorNotesAuthored", fields: [mentorId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model AcademyModule {
  id          String   @id
  title       String
  subtitle    String?
  description String?
  heroImage   String?
  content     Json     @default("{}")
  trackId     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workbookEntries WorkbookEntry[]
  mentorFeedback  MentorFeedback[]
}

model Event {
  id          String      @id @default(cuid())
  title       String
  type        String?
  format      String?
  hostId      String?
  hostName    String?
  status      String      @default("scheduled")
  location    String?
  description String?
  startTime   DateTime
  endTime     DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  host   User?       @relation("HostedEvents", fields: [hostId], references: [id])
  rsvps  EventRsvp[]
}

model EventRsvp {
  id        String   @id @default(cuid())
  eventId   String
  userId    String?
  status    String   @default("confirmed")
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id])
}

model AdminSettings {
  id                  Int      @id @default(1)
  inviteOnly          Boolean  @default(true)
  defaultMentorId     String?
  pinterestClientId   String?
  pinterestSecret     String?
  myRegistryMerchantId String?
  affiliateNetwork    String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model MentorFeedback {
  id             String         @id @default(uuid())
  mentorId       String
  memberId       String
  moduleId       String?
  registryItemId String?
  message        String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  mentor       User           @relation("MentorFeedbackMentor", fields: [mentorId], references: [id])
  member       User           @relation("MentorFeedbackMember", fields: [memberId], references: [id])
  module       AcademyModule? @relation(fields: [moduleId], references: [id])
  registryItem RegistryItem?  @relation(fields: [registryItemId], references: [id])
}

model MentorTask {
  id          String   @id @default(uuid())
  mentorId    String
  memberId    String
  type        String
  referenceId String?
  title       String
  description String?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())

  mentor User @relation("MentorTasksMentor", fields: [mentorId], references: [id])
  member User @relation("MentorTasksMember", fields: [memberId], references: [id])
}

model JournalShare {
  id        String   @id @default(uuid())
  journalId String
  memberId  String
  mentorId  String
  allowed   Boolean  @default(true)
  createdAt DateTime @default(now())
}

model RegistryConflict {
  id          String   @id @default(cuid())
  userId      String
  itemId      String
  field       String
  localValue  String?
  remoteValue String?
  resolved    Boolean  @default(false)
  createdAt   DateTime @default(now())

  user  User         @relation(fields: [userId], references: [id])
  item  RegistryItem @relation(fields: [itemId], references: [id])

  @@index([userId])
  @@index([itemId])
  @@index([userId, resolved])
}

model WorkbookEntry {
  id        String            @id @default(cuid())
  userId    String
  moduleId  String
  type      WorkbookEntryType
  content   Json
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  user    User           @relation(fields: [userId], references: [id])
  module  AcademyModule  @relation(fields: [moduleId], references: [id])

  @@index([userId])
  @@index([moduleId])
  @@unique([userId, moduleId, type])
}
