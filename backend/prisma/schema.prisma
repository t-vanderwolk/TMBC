generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MEMBER
  MENTOR
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  name         String?
  role         Role     @default(MEMBER)
  invites      Invite[] @relation("CreatedInvites")
  consumedInvite Invite? @relation("ConsumedInvite")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Invite {
  id          String   @id @default(cuid())
  code        String   @unique
  role        Role     @default(MEMBER)
  createdBy   User     @relation("CreatedInvites", fields: [createdById], references: [id])
  createdById String
  used        Boolean  @default(false)
  usedAt      DateTime?
  usedBy      User?    @relation("ConsumedInvite", fields: [usedById], references: [id])
  usedById    String?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
}
